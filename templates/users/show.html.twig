        <nav>
            <ul class="navul">
                <li class="navitem">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\DashboardController') }}"><button>Admin</button></a>
                </li>
                <li class="navitem">
                    <a href="{{ path('main') }}"><button>Homepage</button></a>
