{% extends 'base.html.twig' %}

{% block title %}BingoGrid index{% endblock %}

{% block body %}
    <h1>BingoGrid index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gridname</th>
                <th>Cote</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bingo_grid in bingo_grids %}
            <tr>
                <td>{{ bingo_grid.id }}</td>
                <td>{{ bingo_grid.gridname }}</td>
                <td>{{ bingo_grid.cote }}</td>
                <td>
                    <a href="{{ path('app_bingo_grid_show', {'id': bingo_grid.id}) }}">show</a>
                    <a href="{{ path('app_bingo_grid_edit', {'id': bingo_grid.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bingo_grid_new') }}">Create new</a>
{% endblock %}
