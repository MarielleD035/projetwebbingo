{% extends 'base.html.twig' %}

{% block title %}Cell index{% endblock %}

{% block body %}
    <h1>Cell index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CoordX</th>
                <th>CoordY</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cell in cells %}
            <tr>
                <td>{{ cell.id }}</td>
                <td>{{ cell.coordX }}</td>
                <td>{{ cell.coordY }}</td>
                <td>{{ cell.content }}</td>
                <td>
                    <a href="{{ path('app_cell_show', {'id': cell.id}) }}">show</a>
                    <a href="{{ path('app_cell_edit', {'id': cell.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cell_new') }}">Create new</a>
{% endblock %}
