{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <header>
        <a class="homepagelink" href="{{ path('main')}}"><h1>ADMIN</h1></a>
        <nav>
            <ul class="navul">
                <li class="navitem">
                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\DashboardController') }}"><button>Grilles publiques</button></a>
                </li>
                <li class="navitem">
                    <a href="{{ path('main') }}"><button>Homepage</button></a>
                </li>
                <li class="navitem">
                    <a href="./message"><button>Messages</button></a>
                </li>
                <li class="navitem">
                    <a href="./grid"><button>Grilles</button></a>
                </li>
                <li class="navitem">
                    <a href="{{ path('app_users_index') }}"><button>user</button></a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <section id="messageadminview">
            <h2>Messages</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Mail</th>
                    <th>Nom</th>
                    <th>Objet</th>
                    <th>Message</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for message in messages %}
                    <tr>
                        <td>{{ message.id }}</td>
                        <td>{{ message.mail }}</td>
                        <td>{{ message.nom }}</td>
                        <td>{{ message.Objet }}</td>
                        <td>{{ message.message }}</td>
                        <td>
                            <a href="{{ path('app_message_show', {'id': message.id}) }}"><button class="commonbtn">show</button></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>



    <footer>

    </footer>
{% endblock %}
